
@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container">
    <h1 class="card-title text-muted mb-4">Rezervasyon güncelleme sayfası</h1>
    <form method="post">
        <input type="hidden" asp-for="BookingId" class="form-control" />
        <label>Misafir Adı</label>
        <input type="text" asp-for="NameSurname" class="form-control" />
        <span asp-validation-for="NameSurname" class="text-danger"></span>
        <br />
        <label>E mail</label>
        <input type="text" asp-for="Mail" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
        <br />
        <label>Giriş Tarihi</label>
        <input type="date" asp-for="CheckIn" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
        <br />
        <label>Çıkış Tarihi</label>
        <input type="date" asp-for="CheckOut" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
        <br />
        <label>Yetişkin Sayisi</label>
        <input type="text" asp-for="AdultCount" class="form-control" />
        <span asp-validation-for="AdultCount" class="text-danger"></span>
        <br />
        <label>Çocuk Sayısı</label>
        <input type="text" asp-for="ChildCount" class="form-control" />
        <span asp-validation-for="ChildCount" class="text-danger"></span>
        <br />
        <label>Oda Sayısı</label>
        <input type="text" asp-for="RoomCount" class="form-control" />
        <span asp-validation-for="RoomCount" class="text-danger"></span>
        <br />
        <label>Şehir</label>
        <input type="text" asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
        <br />
        <label>Ülke</label>
        <input type="text" asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
        <br />
        <label>Durum</label>
        <input type="text" asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
        <br />
        <label>Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
        <br />
        <label>Özel İstekler</label>
        <textarea type="text" asp-for="SpecialRequest" rows="5" class="form-control"></textarea>
        <span asp-validation-for="SpecialRequest" class="text-danger"></span>
        <br />

        <button class="btn btn-outline-primary"><i class="fa fa-edit"></i> Güncelle</button>
    </form>
</div>
