@model List<ResultBookingDto>
@{
    ViewData["Title"] = "ListWaitedBookings";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Bekletilen Rezervasyonlar</h1>
<br />

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi</th>
                <th>Durum</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.NameSurname</td>
                    <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                    <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                    <td>
                        <span class="badge px-2 badge-warning">
                            @item.Status
                        </span>
                    </td>
                    <td>
                        <a href="@Url.Action("UpdateBooking", "AdminBooking", new { id = item.BookingId })"
                           class="btn btn-outline-info">
                            Güncelle
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Details", "AdminBooking", new { id = item.BookingId })"
                           class="btn btn-outline-dark">
                            Detaylar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

