@model LoginUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Hotelier Admin Giriş Paneli</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/colorlib-regform-13/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/colorlib-regform-13/css/style.css">
</head>
<body>

    <div class="main">

        <div class="container">
            <div class="booking-content">
                <div class="booking-image">
                    <img class="booking-img" src="~/colorlib-regform-13/images/hotel-register.jpg" alt="Booking Image" style="height:500px">
                </div>
                <div class="booking-form">
                    <form id="booking-form" method="post">
                        <h2>Harika Bir Tatil İçin Giriş Yap!</h2>
                      

                        <div class="form-group form-input">
                            <input type="text" asp-for="UserName" id="name" value="" />
                            <label for="name" class="form-label">Kullanıcı Adınız</label>
                            <span asp-validation-for="UserName" class="text-warning"></span>
                        </div>

                        <div class="form-group form-input">
                            <input type="password" asp-for="Password" id="name" value="" />
                            <label for="name" class="form-label">Şifreniz</label>
                            <span asp-validation-for="Password" class="text-warning"></span>
                        </div>

                        <br />
                        <div class="form-submit">
                            <input type="submit" value="Giriş Yap" class="submit" id="submit" name="submit" />
                            <br />
                            <a href="/Register/Index/" class="vertify-booking">Eğer Hesabınız Yoksa Kayıt Olunuz </a>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <!-- JS -->
    <script src="~/colorlib-regform-13/vendor/jquery/jquery.min.js"></script>
    <script src="~/colorlib-regform-13/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>

