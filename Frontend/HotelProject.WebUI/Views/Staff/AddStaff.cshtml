
@model AddStaffViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Personel Ad Soyad</label>
    <input type="text" asp-for="NameSurname" class="form-control" />
    <br />
    <label>Personel Ünvanı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Sosyal Medya Link 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <br />
    <label>Sosyal Medya Link 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <br />
    <label>Sosyal Medya Link 3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <br />
    <label>Personel Görsel Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <button class="btn btn-primary">Personeli Ekle</button>
</form>

